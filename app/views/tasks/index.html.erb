
<h1>My tasks</h1>
    <% @tasks.each do |task| %>
      <p>
        <% if task.completed == true %>
        <i class="fas fa-check-square"></i>
        <% else %>
        <i class="far fa-square"></i>
        <% end %>
      <%= link_to task.title, task_path(task) %>
      </p>
    <% end %>

<%= link_to "Create a task", new_task_path , :class => "badge bg-primary text-wrap text-light text-decoration-none" %>
